#:kivy 2.0.1

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        padding: 50
        spacing: 20 

        Accordion:
            orientation: 'vertical'
            AccordionItem:
                title: "Panel 1"
                Label:
                    text: 'This is the panel 1 text'
            
            AccordionItem: 
                title: "Panel 2"
                TextInput:
                    id: input_accordion_text 

            AccordionItem: 
                title: "A handsome man"
                Image:
                    source: 'beauty_man.jpg' 

