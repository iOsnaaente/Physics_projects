#:kivy 2.0.1
#:import Factory kivy.factory.Factory

<MyPopup@Popup>
    auto_dismiss: True
    title: 'Popup window'
    size_hint: .6, .25

    BoxLayout:
        orientation: 'vertical'
        Label: 
            id: choice 
            text: 'Selecione os sabores e tamanho'
        Button: 
            text: 'Close order'
            font_size: 24
            on_release: root.dismiss() 

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        padding: 50
        spacing: 20 

        GridLayout:
            cols: 2 

            GridLayout:
                cols: 2

                Label:
                    text: 'Pizza de Pepperita'
                    font_size: 24
                CheckBox:
                    on_active: root.checkbox_click(self, self.active, 'Pepperita')
                Label:
                    text: 'Pizza de Caranqueijo'
                    font_size: 24
                CheckBox:
                    on_active: root.checkbox_click(self, self.active, 'Caranqueijo')
                Label:
                    text: 'Pizza de Quatroperis'
                    font_size: 24
                CheckBox:
                    on_active: root.checkbox_click(self, self.active, 'Quatroperis') 


            BoxLayout:
                orientation: 'vertical'
                id: sizes 
                GridLayout:
                    cols: 2

                    Label: 
                        text: 'Tamanho pequeno'
                        fonte_size: 24
                    CheckBox:
                        group: 'tamanho'
                        on_active: root.pizza_size(self, self.active, 'Pequeno')

                    Label: 
                        text: 'Tamanho médio'
                        fonte_size: 24
                    CheckBox:
                        group: 'tamanho'
                        on_active: root.pizza_size(self, self.active, 'Médio') 

                    Label: 
                        text: 'Tamanho grande'
                        fonte_size: 24
                    CheckBox:
                        group: 'tamanho'
                        on_active: root.pizza_size(self, self.active, 'Grande') 
        Button: 
            text: 'submit order'
            on_release: Factory.MyPopup().open() 
            
        
