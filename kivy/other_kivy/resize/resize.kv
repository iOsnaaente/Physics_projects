#:kivy 2.0.1

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        padding: 50
        spacing: 20 

        font_size: 32

        Splitter:
            sizable_from: 'bottom'
            Label:
                text: 'Label 1'
                
        Splitter:
            sizable_from: 'right'
            Button:
                text: 'Button 1'
            
            
        Splitter:
            sizable_from: 'left'
            Button:
                text: 'Button 2'
            
        Splitter:
            sizable_from: 'top'
            GridLayout:
                cols: 2 
                Button:
                    text: 'Button 3.1'
                Button:
                    text: 'Button 3.2'