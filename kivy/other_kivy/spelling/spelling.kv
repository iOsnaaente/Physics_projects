#:kivy 2.0.1

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        padding: 50
        spacing: 20 

        Label:
            id: word_label 
            text_size: self.size
            haling: 'center'
            valign: 'middle'
            tetx: "Enter a word"
            font_size: 32

        TextInput: 
            id: word_input
            multiline: False 
            size_hint: (1, .5)

        Button: 
            size_hint: (1, .5)
            font_size: 24
            text: 'submit'
            on_press: root.press_submit() 